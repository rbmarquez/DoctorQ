# =============================================================================
# DoctorQ Frontend - Variáveis de Ambiente para Produção
# =============================================================================
# Copie para: estetiQ-web/.env.production.local
# =============================================================================

# API Backend (Nginx proxy)
NEXT_PUBLIC_API_URL=https://aiquebeleza.com/api
API_DOCTORQ_API_KEY=SUBSTITUA_PELA_SUA_API_KEY_DE_PRODUCAO

# NextAuth Configuration
NEXTAUTH_URL=https://aiquebeleza.com
NEXTAUTH_SECRET=GERE_UM_SECRET_SEGURO_COM_32_CARACTERES_MINIMO

# OAuth Providers
# Google OAuth - https://console.cloud.google.com/
GOOGLE_CLIENT_ID=SEU_CLIENT_ID.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=SEU_CLIENT_SECRET

# Microsoft Azure AD OAuth - https://portal.azure.com/
AZURE_AD_CLIENT_ID=SEU_AZURE_CLIENT_ID
AZURE_AD_CLIENT_SECRET=SEU_AZURE_CLIENT_SECRET
AZURE_AD_TENANT_ID=common

# App Configuration
NEXT_PUBLIC_APP_NAME=Ai Que Beleza
NEXT_PUBLIC_APP_URL=https://aiquebeleza.com
NEXT_PUBLIC_APP_DESCRIPTION=Plataforma de Gestão para Clínicas de Estética

# Feature Flags
NEXT_PUBLIC_ENABLE_MARKETPLACE=true
NEXT_PUBLIC_ENABLE_AI_CHAT=true
NEXT_PUBLIC_ENABLE_BILLING=true
NEXT_PUBLIC_ENABLE_CENTRAL_ATENDIMENTO=true

# Analytics (opcional)
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
NEXT_PUBLIC_POSTHOG_KEY=phc_XXXXXXXX
NEXT_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/xxx

# Payment (opcional)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_XXXXXXXX
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY=APP_USR-XXXXXXXX

# WebSocket
NEXT_PUBLIC_WS_URL=wss://aiquebeleza.com/ws

# Image Optimization
NEXT_PUBLIC_IMAGE_DOMAINS=aiquebeleza.com,storage.googleapis.com
