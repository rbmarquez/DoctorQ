import { PageHeader } from '@/components/shared/layout/PageHeader';
import { AgendaCalendar } from './_components/AgendaCalendar';
import { getAgendaDia } from '@/lib/api/server';
import { getProfissionalId } from '@/lib/auth/session';

export const metadata = {
  title: 'Minha Agenda | EstetiQ',
  description: 'Gerencie sua agenda e horários de atendimento',
};

interface AgendaPageProps {
  searchParams: {
    data?: string;
  };
}

export default async function AgendaProfissionalPage({ searchParams }: AgendaPageProps) {
  const data = searchParams.data;
  let agendamentos: any = { items: [] };

  try {
    const profissionalId = await getProfissionalId();
    if (profissionalId) {
      agendamentos = await getAgendaDia(profissionalId, data);
    }
  } catch (error) {
    console.error('Erro ao buscar agenda:', error);
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-gray-50 via-white to-gray-50">
      <div className="container mx-auto p-8 space-y-6">
        <PageHeader title="Minha Agenda" description="Gerencie seus horários e atendimentos" action={{ label: 'Novo Agendamento', href: '/profissional/agenda/novo' }} />
        <AgendaCalendar initialAgendamentos={agendamentos.items} />
      </div>
    </div>
  );
}
